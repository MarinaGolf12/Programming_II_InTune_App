public class SwingJButtonDemo extends JFrame{

   public static void main(String[] args) {
		SwingUtilities.invokeLater(new Runnable() {
			@Override
			public void run() {

				new SwingJButtonDemo().setVisible(true);
			}
		});

	}
public class UserTest {


	public UserTest(){}
