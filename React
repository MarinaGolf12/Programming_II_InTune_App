import javax.swing.*;
import java.awt.FlowLayout;
import java.awt.Dimension;
public class React {

	public static void main(String[] args) {

		JFrame frame = new JFrame("React");
		frame.setVisible(true);
		frame.setSize(1000,300);
		frame.setLayout(new FlowLayout());
		JLabel label1 = new JLabel("React to this post!");
		frame.add(label1);

		ButtonGroup bg = new ButtonGroup();
		JRadioButton r1 = new JRadioButton("My favourite");
		frame.add(r1);
		bg.add(r1);
		JRadioButton r2 = new JRadioButton("Like");
		frame.add(r2);
		bg.add(r2);
		JRadioButton r3 = new JRadioButton("Catchy");
		frame.add(r3);
		bg.add(r3);
		JRadioButton r4 = new JRadioButton("Sound Off");
		frame.add(r4);
		bg.add(r4);
		JRadioButton r5 = new JRadioButton("Earache");
		frame.add(r5);
		bg.add(r5);


		r2.setIcon(new ImageIcon("2764.jpg"));
		frame.add(r2);
		r2.setSize(1,1);
		r2.setPreferredSize(new Dimension(100,100));
		frame.setVisible(true);

	}




}
