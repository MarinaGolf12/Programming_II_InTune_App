// Java program to add or delete friends from your friend list

import java.awt.event.*;
import javax.swing.*;
class text extends JFrame implements ActionListener {
	// JTextField
	static JTextField t;

	// JFrame
	static JFrame f;

	// JButton
	static JButton b;

	static JButton b2;

	// label to display text
	static JLabel l;

	// default constructor
	text()
	{
	}

	// main class
	public static void main(String[] args)
	{
		// create a new frame to store text field and button
		f = new JFrame("textfield");

		// create a label to display text
		l = new JLabel("nothing entered");

		// create a new button
		b = new JButton("add a friend");
		b2 = new JButton("delete a friend");

		// create a object of the text class
		text te = new text();

		// addActionListener to button
		b.addActionListener(te);
		b2.addActionListener(te);

		// create a object of JTextField with 16 columns and a given initial text
		t = new JTextField(16);

		// create a panel to add buttons and textfield
		JPanel p = new JPanel();

		// add buttons and textfield to panel
		p.add(t);
		p.add(b);
		p.add(b2);
		p.add(l);

		// add panel to frame
		f.add(p);

		// set the size of frame
		f.setSize(300, 300);

		f.show();

		SwingJButtonDemo.mainCaller();
	}

	// if a button is pressed
	public void actionPerformed(ActionEvent e)
	{
		User u = new User();
		String s = e.getActionCommand();
		if (s.equals("add a friend")) {
			// set the text of the label to the text of the field and add a friend
			l.setText(t.getText()+" is added");
            u.addFriend(t.getText());
			// set the text of field to blank
			t.setText(" ");
		}else if (s.equals("delete a friend")) {
			// set the text of the label to the text of the field and delete a friend
			l.setText(t.getText()+" is deleted");
            u.deleteFriend(t.getText());
			// set the text of field to blank
			t.setText(" ");
	     }
	}
}
